# ActionSMTP Configuration
# Copy this to .env and customize

# REQUIRED: Your Action Mailbox webhook URL
WEBHOOK_URL=http://host.docker.internal:3000/rails/action_mailbox/relay/inbound_emails

# Authentication (generate password: bin/rails runner "puts SecureRandom.base58(24)")
AUTH_USER=actionmailbox
AUTH_PASS=your-secret-password-here

# Spam filtering settings
SPAM_CHECK=true           # Set to false to disable spam filtering
SPAM_THRESHOLD=5.0        # Score to flag as spam (default: 5.0)
SPAM_REJECT=10.0          # Score to reject email (default: 10.0)
SPAM_HOST=spamassassin    # SpamAssassin host
SPAM_PORT=783             # SpamAssassin port

# Server settings
PORT=25                   # SMTP port
HOST=0.0.0.0             # Bind address
MAX_SIZE=26214400        # Max email size in bytes (default: 25MB)
TIMEOUT=30000            # Connection timeout in ms

# Logging
VERBOSE=false            # Set to true for verbose debug logging

# SpamAssassin
SPAMD_OPTS=-i -A 0.0.0.0/0
